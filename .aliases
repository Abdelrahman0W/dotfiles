# Programs
if [[ "$OSTYPE" =~ ^darwin ]]; then
	alias google-chrome='open -a "Google Chrome"'
	alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
	alias updatedb='sudo /usr/libexec/locate.updatedb'
else
	# Simulates pbcopy. requires xclip installed.
	alias pbcopy='xclip -selection clipboard'
	alias pbpaste='xclip -selection clipboard -o'
	alias trash='trash-put'
	alias google-chrome='chromium-browser'
fi

# Enable color support of ls and also add handy aliases
if [ -x /usr/local/bin/gdircolors ] || [ -x /usr/bin/dircolors ]; then
	if [[ "$OSTYPE" =~ ^darwin ]]; then
		test -r ~/.dircolors && eval "$(gdircolors -b ~/.dircolors)" || eval "$(gdircolors -b)"
		alias ls='gls --color=auto'
		alias dir='gdir --color=auto'
		alias vdir='gvdir --color=auto'
	else
		test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
		alias ls='ls --color=auto'
		alias dir='dir --color=auto'
		alias vdir='vdir --color=auto'
	fi

	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
fi

# More ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l="ls -F1"
alias lg="ls -go"

# List only directories
alias lsd='ls -l | grep "^d"'

# `cat` with beautiful colors. requires Pygments installed.
alias c='pygmentize -O style=default -f console256 -g'


# GIT STUFF

# Undo a `git push`
alias undopush="git push -f origin HEAD^:master"

# git root
alias gr='[ ! -z `git rev-parse --show-cdup` ] && cd `git rev-parse --show-cdup || pwd`'


# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# Enhanced WHOIS lookups
alias whois="whois -h whois-servers.net"

# Flush Directory Service cache
alias flush="dscacheutil -flushcache"

# Trim new lines and copy to clipboard
alias trimcopy="tr -d '\n' | pbcopy"

# Copy current dir path
alias pwdcopy="pwd | tr -d '\n' | pbcopy"

# Recursively delete `.DS_Store` files
alias cleanup="find . -name '*.DS_Store' -type f -ls -delete"

# Shortcuts
alias g="git"
alias s="subl"
alias sa="subl -a"
alias sn="subl -n"
alias t="tmux"
alias v="vim"

# File size
alias fs="stat -f \"%z bytes\""

# ROT13-encode text. Works for decoding, too! ;)
alias rot13='tr a-zA-Z n-za-mN-ZA-M'

# Empty the Trash on all mounted volumes and the main HDD
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; rm -rfv ~/.Trash"

# Hide/show all desktop icons (useful when presenting)
if [[ "$OSTYPE" =~ ^darwin ]]; then
	alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
	alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"
fi

# Trash aliases (install trash first)
alias trashtex='trash *.log *.aux *.nav *.out *.snm *.toc *.vrb *.bbl *.blg *.dvi *.synctex.gz *.fdb_latexmk' # use rvf for "rm"
alias trashtexfull='trash_tex; trash *.pdf'
alias trashjavaclass='trash -fv *.class' # use rvf for "rm"
alias trashvimswp="trash ~/.vim/swaps; mkdir ~/.vim/swaps"

# ROS formatting
alias rosindent="indent -bli0 -nce -l120 -cli2 -nut -npsl"
alias rosastyle="astyle --style=allman --suffix=none --indent=spaces=2 --pad-oper --unpad-paren --pad-header --convert-tabs"
