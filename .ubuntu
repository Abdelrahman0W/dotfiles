#!/bin/bash

# ~/.ubuntu

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until `.osx` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Basics
sudo apt-get install ssh synaptic vim gconf-editor xclip trash-cli tree pv tmux

# At this point, I like to
# 1. install programs I use daily, such as Chromium, Dropbox, Skype, Gnote, meshlab, qtcreator
# 2. setup keyboard shortcuts (google-chrome) and set keyboard delay time to smallest possible
# 3. install Korean language pack

# Installing the newest tmux
if [ ! -d ~/local/src/tmux-tmux-code ]; then
	pushd .
	sudo apt-get install libevent-dev libncurses-dev pkg-config
	mkdir -p ~/local/src; cd ~/local/src/
	git clone git://git.code.sf.net/p/tmux/tmux-code tmux-tmux-code
	cd tmux-tmux-code
	git checkout tags/1.9a
	autoreconf -fis
	./configure --prefix ~/local/
	make; make install
	popd
	echo "Donâ€™t forget to add ~/local/bin to \$PATH."
fi;
